<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">    
    <title>Lista de Livros</title>
    <style>
        a{
            text-decoration: none;
            color: black;
        }
        .imgs {
        height: 70px;
      }
      .login {
        align-self: center;    
        margin-left: 58rem;
    }
      .textonav {
        color: rgba(3, 1, 112, 1) !important;
        padding-top: 25px;
        padding-left: 40px !important;
        font-size: larger;
        font-weight: bold;
      }
      .logoh {
        margin-left: 15px;
      }
      .bg-light { 
        background-color: rgba(210, 220, 255, 1) !important;
      }
      .foot {
        text-align: center !important;
        font-size: 15px;
        font-weight: bold;
        padding: 15px;
        word-spacing: 15px;
        color: rgba(3, 1, 112, 1);
      }
      .imgft {
        height: 50px;
      }
      .btn-primary {
        background-color: rgba(210, 220, 255)!important;
        color: rgba(3, 1, 112)!important;
      }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg bg-light">
        <div class="container-fluid d-flex ">
          <div class="navbar-nav">
            <a class="nav-link active logoh" aria-current="page" href="/"
              ><img
                class="imgs"
                src="https://pbs.twimg.com/media/FFAltJ4WQAQw0BK?format=png&name=240x240"
                alt="Home"
            /></a>
            <a class="nav-link textonav" href="/livros">Livros</a>
            <a class="nav-link textonav" href="/alunos">Alunos</a>
            <a class="nav-link textonav" href="/listaEmprestimo">Emprestados</a>
            <img
              class="text-right imgs login"
              src="https://pbs.twimg.com/media/FFAltJ3XEAU_3EE?format=png&name=120x120"
              alt="Login"
            />
          </div>
        </div>
      </nav>

    <section class="container">
        
        <div class="row">
            <div class="col">
                <div class="row mt-5">
                     
                    <div class="col-12">
                        <h1 class="col-12 text-center">Lista de Alunos</h1>                        
                    </div>
                    <div class="col-12 d-flex flex-wrap">
                        <a href="/criar" class="btn btn-primary mx-2">Inserir Alunos</a>
                        <input class="mx-2" type="text" id="myInput" onkeyup="pesquisar()" placeholder="Pesquisar por Nome do Aluno">
                        <a href="/" class="btn btn-primary mx-2">Inicio</a>
                        
                    </div>
                </div>
                <table id='myTable' class="table table-hover" >
                    <thead>
                        <tr>
                            <th>Nome</th>
                            <th>Curso</th>
                            <th>E-Mail</th>
                            <th>Telefone</th>
                            <th>Ação</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%if(alunos_item == 0){ %>
                            <tr>
                                <td colspan="6" class="alert alert-warning">Nenhum Aluno Cadastrado</td>
                            </tr>   
                        <% }else{ alunos_item.forEach(function(aluno){ %>
                            <tr>
                                <td> <%= aluno.nomeAluno %> </td>
                                <td> <%= aluno.nomeCurso %> </td>
                                <td> <%= aluno.email %> </td>
                                <td> <%= aluno.telefone %> </td>
                                <td>
                                    <a href="atualizarAlunos/<%=aluno._id %>" class="btn btn-success">Editar</a>
                                    <a href="deletarAlunos/<%=aluno._id %>" class="btn btn-danger">Apagar</a>
                                   
                                </td>
                            </tr>
                        <% })} %>
                    </tbody>
                </table>
            </div>
        </div>
    </section>

    <footer class="foot bg-light mt-3">
        <p>Elle | Rauny | Elisa | Bernardo | Geisa</p>
        <img
          class="imgft"
          src="https://pbs.twimg.com/media/FFAltJ3WUAM-VhK?format=png&name=120x120"
          alt="logo"
        />
    </footer>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
   <script src="/js/search.js"></script>
</body>
</html>